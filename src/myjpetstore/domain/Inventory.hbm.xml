<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
        <class name="myjpetstore.domain.Inventory" table="inventory" lazy="false">
                <id name="itemid" type="text" column="itemid">
                        <generator class="assigned"/>
                </id>
                <property name="qty" type="int" column="qty" not-null="true" />
        </class>
</hibernate-mapping>