<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
        <class name="myjpetstore.domain.Product" table="product" lazy="false">
                <id name="productId" type="text" column="productid">
                        <generator class="assigned"/>
                </id>
                <property name="categoryId" type="text" column="category"/>
                <property name="name" type="text" column="name"/>
                <property name="description" type="text" column="descn"/>
        </class>
</hibernate-mapping>